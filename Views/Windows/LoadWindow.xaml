<Window x:Class="TemplateEngine_v3.Views.Windows.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateEngine_v3.Views.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="280"
        Height="280"
        Title="LoadWindow">

    <Window.Resources>
        <Storyboard x:Key="LoopingProgressBarAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MyProgressBar"
                                           Storyboard.TargetProperty="Value">
                <!-- Подъём с 0 до 100 -->
                <LinearDoubleKeyFrame Value="100" 
                                      KeyTime="0:0:1" />
                <!-- Падение до 75 -->
                <LinearDoubleKeyFrame Value="0" 
                                      KeyTime="0:0:1.5" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LoopingProgressBarAnimation}" />
        </EventTrigger>
    </Window.Triggers>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="230"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="MyProgressBar"
                     Width="200"
                     Height="200"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     Grid.Row="0"/>
        <TextBlock TextAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Grid.Row="1">
            Загрузка...
        </TextBlock>
    </Grid>
</Window>
