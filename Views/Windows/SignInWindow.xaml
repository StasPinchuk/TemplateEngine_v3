<Window x:Class="TemplateEngine_v3.Views.Windows.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TemplateEngine_v3.Views.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="SignInWindow" 
        Height="380"
        Width="450">
    <Border Padding="10"
            CornerRadius="8"
            Background="#FFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="0">
                <Image Width="40"/>
                <TextBlock FontWeight="Bold"
                       FontSize="16"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Width="190">
                <Run Text="Вход в"/>
                <Run Text="редактор шаблонов"
                     Foreground="#0CC334"/>
                <Run Text="изделий"/>
                </TextBlock>
            </StackPanel>
            <StackPanel Margin="10,40,10,0"
                        VerticalAlignment="Center"
                        Grid.Row="1">
                <TextBox MaxWidth="500"
                         VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Логин учетной записи TFlex DOC's"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         AcceptsReturn="True"
                         Text="{Binding Credentials.Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         TextWrapping="Wrap"/>
                <PasswordBox VerticalAlignment="Top"
                             x:Name="PassworBox"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.Hint="Пароль учетной записи TFlex DOC's"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledPasswordBoxEnabledComboBox}"
                             Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                             Margin="0,10,0,10"/>
                <TextBox MaxWidth="500"
                         VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="IP Сервера TFlex DOC's"
                         AcceptsReturn="True"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Text="{Binding Credentials.ServerIp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>
                <Grid HorizontalAlignment="Center"
                      Margin="0,10,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Button Height="40"
                            Padding="10,5"
                            Tag="TransperentPrimary"
                            Content="Указть путь к файлам DOCs"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Command="{Binding SetApiPathCommand}"
                            Grid.Row="0"/>

                    <UniformGrid Columns="2"
                                 Grid.Row="1"
                                 Margin="0,10,0,0">
                        <Button Height="40"
                                Padding="10,5"
                                Tag="TransperentAccept"
                                Content="Отмена"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="10,0,10,0"
                                Command="{Binding AppExitCommand}"/>

                        <Button Height="40"
                                Padding="10,5"
                                Tag="TransperentAccept"
                                Content="Вход"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,0"
                                Command="{Binding SingInCommand}"/>
                    </UniformGrid>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
