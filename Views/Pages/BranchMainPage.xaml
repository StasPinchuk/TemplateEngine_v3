<Page x:Class="TemplateEngine_v3.Views.Pages.BranchMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Name="branchMainPage"
      Title="BranchMainPage">

    <StackPanel Orientation="Vertical"
                Margin="20">

        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Название филиала"
                 Text="{Binding CurrentBranch.Name, UpdateSourceTrigger=LostFocus}"/>

        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Обозначение филиала"
                 Text="{Binding CurrentBranch.Designation, UpdateSourceTrigger=LostFocus}"
                 Margin="0,10"/>

        <Button Content="{Binding ButtonText, UpdateSourceTrigger=LostFocus}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="Green"
                BorderBrush="Green"
                HorizontalAlignment="Right"
                Command="{Binding ModifyCommand}"/>

        </StackPanel>
</Page>
