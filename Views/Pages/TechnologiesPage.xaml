<Page x:Class="TemplateEngine_v3.Views.Pages.TechnologiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1280"
      x:Name="techPage"
      Title="TechnologiesPage">

    <DockPanel LastChildFill="False">

        <materialDesign:DrawerHost x:Name="DrawerHost"
                                   Width="{Binding ElementName=techPage, Path=ActualWidth}"
                                   Height="{Binding ElementName=techPage, Path=ActualHeight}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   BottomDrawerBackground="{DynamicResource SecondaryHueLightBrush}"
                                   BottomDrawerCornerRadius="20 20 0 0">

            <Grid Margin="40,0,40,0"
                  DockPanel.Dock="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Название технологического процесса"
                             Text="{Binding CurrentTechnologies.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                             FontSize="14"
                             Grid.Column="0"/>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Content="Выбрать готовое тп"
                            Height="40"
                            Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                            CommandParameter="{x:Static Dock.Right}"
                            Grid.Column="2"/>

                    <Button Tag="TransperentAccept"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#4CAF50"
                            Foreground="White"
                            materialDesign:ColorZoneAssist.Mode="Custom"
                            Content="Сохранить ТП"
                            Height="40"
                            Grid.Column="4"/>


                </Grid>
                <Border Background="#FFF"
                        BorderBrush="#D9D9D9"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,10,0,10"
                        Grid.Row="2">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="3"
                                          ShadowDepth="3"
                                          Color="Black"
                                          Opacity="0.25"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border BorderBrush="#D9D9D9"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="6"
                                Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <DockPanel LastChildFill="False"
                                            Grid.Row="0">
                                    <TextBlock Text="Операции"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                DockPanel.Dock="Left"/>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30"
                                            Height="30"
                                            Command="{Binding CreateNewOperationCommand}"
                                            DockPanel.Dock="Right">
                                        <materialDesign:PackIcon Kind="Plus"
                                                                    Foreground="Green"/>
                                    </Button>
                                </DockPanel>
                                <ListBox ItemsSource="{Binding CurrentTechnologies.Operations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedItem="{Binding CurrentOperation, Mode=TwoWay}"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            HorizontalContentAlignment="Stretch"
                                            Cursor="Hand"
                                            Grid.Row="1"
                                            PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                                            MouseMove="ListBox_MouseMove"
                                            AllowDrop="True"
                                            Drop="ListBox_Drop">
                                    <!-- Растяжение по ширине -->

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F5F5F5"
                                                    BorderBrush="#D9D9D9"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Padding="8">
                                                <!-- Можно использовать Border для визуального оформления -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="40"/>
                                                    </Grid.ColumnDefinitions>
                                                    <!-- Текст -->
                                                    <TextBlock Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                Grid.Column="0" 
                                                                TextWrapping="Wrap"
                                                                VerticalAlignment="Center"/>

                                                    <!-- Кнопка удаления -->
                                                    <Button Grid.Column="1"
                                                            Width="30"
                                                            Height="30"
                                                            Style="{StaticResource MaterialDesignIconButton}"
                                                            Foreground="Black"
                                                            Command="{Binding DataContext.RemoveOperationCommand, ElementName=techPage}"
                                                            CommandParameter="{Binding}">
                                                        <materialDesign:PackIcon Kind="TrashCanOutline" />
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox materialDesign:HintAssist.Hint="Название операции"
                                            ItemsSource="{Binding OperationNames}"
                                            SelectedItem="{Binding CurrentOperation.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                            FontSize="14"
                                            IsEditable="True"/>
                                <TextBox VerticalAlignment="Top"
                                            MaxLength="3"
                                            materialDesign:HintAssist.Hint="Номер операции"
                                            Text="{Binding CurrentOperation.Order, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            TextWrapping="Wrap"
                                            FontSize="14"
                                            VerticalScrollBarVisibility="Auto"
                                            Grid.Column="2"/>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"
                                                    MinWidth="160"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <DockPanel LastChildFill="False"
                                            Grid.Row="0">
                                        <TextBlock Text="Филиалы"
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Left"/>

                                        <materialDesign:PopupBox PlacementMode="BottomAndAlignCentres"
                                                                    Style="{StaticResource MaterialDesignMultiFloatingActionSecondaryPopupBox}"
                                                                    IsEnabled="{Binding IsEnableBranchList, UpdateSourceTrigger=PropertyChanged}"
                                                                    DockPanel.Dock="Right"
                                                                    Background="Transparent"
                                                                    BorderBrush="Transparent"
                                                                    Foreground="Green"
                                                                    Width="30"
                                                                    Height="30">
                                            <Border Background="#F5F5F5"
                                                    BorderBrush="#D9D9D9"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Padding="8">
                                                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                                                VerticalScrollBarVisibility="Auto">
                                                    <ItemsControl ItemsSource="{Binding Branches, UpdateSourceTrigger=LostFocus}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding Name}"
                                                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                                                        Padding="5"
                                                                        Command="{Binding DataContext.SetBranchCommand, ElementName=techPage}"
                                                                        CommandParameter="{Binding}"
                                                                        Margin="0,0,0,5"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </Border>
                                        </materialDesign:PopupBox>
                                    </DockPanel>
                                    <Border BorderBrush="#D9D9D9"
                                            BorderThickness="1"
                                            Padding="16"
                                            CornerRadius="10"
                                            Grid.Row="1">
                                        <ListBox ItemsSource="{Binding CurrentOperation.BranchDivisionDetails}"
                                                 SelectedItem="{Binding SelectedBranch, Mode=TwoWay}"
                                                 HorizontalContentAlignment="Stretch"
                                                 Cursor="Hand">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#F5F5F5"
                                                            BorderBrush="#D9D9D9"
                                                            BorderThickness="1"
                                                            CornerRadius="8"
                                                            Padding="8">
                                                        <DockPanel LastChildFill="False">
                                                            <TextBlock Text="{Binding Branch.Name}" 
                                                                        DockPanel.Dock="Left"
                                                                        VerticalAlignment="Center"/>

                                                            <Button Width="30"
                                                                    Height="30"
                                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                                    Foreground="Black"
                                                                    Command="{Binding DataContext.RemoveBranchCommand, ElementName=techPage}"
                                                                    CommandParameter="{Binding}"
                                                                    DockPanel.Dock="Right">
                                                                <materialDesign:PackIcon Kind="TrashCanOutline" />
                                                            </Button>
                                                        </DockPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>

                                </Grid>

                                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                            VerticalScrollBarVisibility="Auto"
                                            Grid.Column="2">
                                    <StackPanel Orientation="Vertical"
                                            VerticalAlignment="Stretch"
                                            Margin="0,0,10,0">

                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Оборудование"
                                                 Text="{Binding SelectedBranch.UnitEquipment, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                 FontSize="14"
                                                 Margin="0,5,0,0"
                                                 Grid.Row="0"/>
                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Номер подразделения"
                                                 Text="{Binding SelectedBranch.DivisionCode, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                 FontSize="14"
                                                 Margin="0,10"
                                                 Grid.Row="1"/>
                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Условия для операции"
                                                 TextWrapping="Wrap"
                                                 Text="{Binding SelectedBranch.UsageCondition, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                 ContextMenu="{Binding MaterialsNameMenu, UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 Grid.Row="2"/>
                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Название материала"
                                                 Text="{Binding SelectedBranch.Materials.Name.Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                 FontSize="14"
                                                 Margin="0,10"
                                                 ContextMenu="{Binding MaterialsNameMenu, UpdateSourceTrigger=PropertyChanged}"
                                                 Grid.Row="3"/>
                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Расход материала"
                                                 Text="{Binding SelectedBranch.Materials.Consumption.Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                 FontSize="14"
                                                 ContextMenu="{Binding MaterialsNameMenu, UpdateSourceTrigger=PropertyChanged}"
                                                 Grid.Row="4"/>
                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Text="{Binding SelectedBranch.Materials.Unit, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                 FontSize="14"
                                                 materialDesign:HintAssist.Hint="Единицы измерения"
                                                 Margin="0,10"
                                                 Grid.Row="5"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>

                    </Grid>
                </Border>

            </Grid>

            <materialDesign:DrawerHost.RightDrawerContent>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="16"
                              Width="280">
                    <ItemsControl ItemsSource="{Binding Technologies}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Name}"
                                        Cursor="Hand"
                                        Margin="10,0,10,10"
                                        Foreground="Black"
                                        Command="{Binding DataContext.SetCurrentTechnologiesCommand, ElementName=techPage}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignOutlinedLightButton}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                </ScrollViewer>
            </materialDesign:DrawerHost.RightDrawerContent>
        </materialDesign:DrawerHost>
    </DockPanel>
</Page>
