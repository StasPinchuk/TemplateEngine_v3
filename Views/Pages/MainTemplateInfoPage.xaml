<Page x:Class="TemplateEngine_v3.Views.Pages.MainTemplateInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      xmlns:converters="clr-namespace:TemplateEngine_v3.Converters"
      mc:Ignorable="d" 
      x:Name="MainTemplateInfo"
      Title="MainTemplateInfoPage">

    <Page.Resources>
        <converters:MaxWidthConverter x:Key="MaxWidthConverter"/>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#region Tab панель-->
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="Основная информация"
                         IsChecked="True"
                         Cursor="Hand"
                         Style="{StaticResource MaterialDesignTabRadioButton}" />
            <ItemsControl ItemsSource="{Binding PagesCollection}"
                          Grid.Row="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Title}"
                                     IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                     GroupName="TabsGroup"
                                     Cursor="Hand"
                                     Command="{Binding DataContext.NextPageCommand, ElementName=MainTemplateInfo}"
                                     CommandParameter="{Binding}"
                                     Style="{StaticResource MaterialDesignTabRadioButton}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <!--#endregion-->

        <Border Padding="40, 10"
                Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Название изделия"
                         Text="{Binding CurrentTemplate.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Grid.Row="0"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="#181F2C"
                            CornerRadius="10"
                            Grid.Column="0">

                        <Border.Effect>
                            <DropShadowEffect BlurRadius="3"
                                              ShadowDepth="3"
                                              Color="Black"
                                              Opacity="0.25"/>
                        </Border.Effect>

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Background="#181F2C"
                                    CornerRadius="10,10,0,0"
                                    Padding="10,0"
                                    Grid.Row="0">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <Viewbox Grid.Column="0"
                                             HorizontalAlignment="Left"
                                             MaxWidth="400">
                                        <TextBlock FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F6F6F6"
                                                   TextWrapping="WrapWithOverflow"
                                                   VerticalAlignment="Center"
                                                   MinWidth="300"
                                                   Margin="0,0,10,0">
                                            <Run Text="КД - "/>
                                            <Run Text="{Binding CurrentRelation.Designation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </TextBlock>
                                    </Viewbox>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30"
                                            Height="30"
                                            Command="{Binding AddDesignationCommand}"
                                            Grid.Column="1">
                                        <materialDesign:PackIcon Kind="Plus"
                                                                 Foreground="Green"/>
                                    </Button>
                                            
                                </Grid>

                            </Border>

                            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          Grid.Row="1">
                                <Border Background="White"
                                        CornerRadius="8"
                                        Margin="10, 0, 10, 10"
                                        Padding="10"
                                        VerticalAlignment="Stretch">
                                    <ItemsControl ItemsSource="{Binding CurrentTemplate.TemplateRelations}"
                                                  x:Name="itemsControl"
                                             HorizontalContentAlignment="Stretch">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Expander HorizontalAlignment="Stretch"
                                                          materialDesign:ExpanderAssist.HorizontalHeaderPadding="35,2,24,2"
                                                          Background="#F5F5F5"
                                                          Foreground="Black"
                                                          Margin="0,0,0,10">
                                                    <Expander.Header>
                                                        <HeaderedContentControl>
                                                            <HeaderedContentControl.Header>
                                                                <DockPanel LastChildFill="False"
                                                                           HorizontalAlignment="Stretch">
                                                                    <StackPanel Orientation="Horizontal"
                                                                                DockPanel.Dock="Left">
                                                                        <RadioButton GroupName="KD"
                                                                                     Margin="0,0,10,0"
                                                                                     MaxWidth="{Binding ElementName=itemsControl, Path=ActualWidth, Converter={StaticResource MaxWidthConverter}, ConverterParameter=70}"
                                                                                     Command="{Binding DataContext.SetRelationsCommand, ElementName=MainTemplateInfo}"
                                                                                     CommandParameter="{Binding}">
                                                                            <TextBlock Text="{Binding Designation}"
                                                                                       TextWrapping="Wrap"
                                                                                       HorizontalAlignment="Stretch"
                                                                                       FontWeight="Bold"
                                                                                       FontSize="16"
                                                                                       VerticalAlignment="Center" />
                                                                        </RadioButton>
                                                                    </StackPanel>

                                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                                            Width="30"
                                                                            Height="30"
                                                                            DockPanel.Dock="Right"
                                                                            Command="{Binding DataContext.RemoveDesignationCommand, ElementName=MainTemplateInfo}"
                                                                            CommandParameter="{Binding}"
                                                                            Grid.Column="1">
                                                                        <materialDesign:PackIcon Kind="TrashCan" 
                                                                                                 Foreground="Gray"/>
                                                                    </Button>
                                                                </DockPanel>
                                                            </HeaderedContentControl.Header>
                                                        </HeaderedContentControl>
                                                    </Expander.Header>
                                                    <StackPanel Margin="24,8,24,16"
                                                                Orientation="Vertical">
                                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                 materialDesign:HintAssist.Hint="КД"
                                                                 FontSize="16"
                                                                 TextWrapping="Wrap"
                                                                 AcceptsReturn="True"
                                                                 VerticalScrollBarVisibility="Auto"
                                                                 Loaded="TextBox_Loaded"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 Text="{Binding Designation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                        <TextBox x:Name="UsageConditionBox"
                                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                 materialDesign:HintAssist.Hint="Условия КД"
                                                                 FontSize="16"
                                                                 TextWrapping="Wrap"
                                                                 AcceptsReturn="True"
                                                                 Margin="0,10"
                                                                 Text="{Binding UsageCondition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 Loaded="TextBox_Loaded"/>
                                                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                 Text="{Binding DesignationComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 materialDesign:HintAssist.Hint="Комментарий"
                                                                 FontSize="16"
                                                                 TextWrapping="Wrap"
                                                                 AcceptsReturn="True"/>
                                                    </StackPanel>
                                                </Expander>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </ScrollViewer>
                        </Grid>

                    </Border>

                    <Border Background="#181F2C"
                            CornerRadius="10"
                            Grid.Column="2">

                        <Border.Effect>
                            <DropShadowEffect BlurRadius="3"
                                              ShadowDepth="3"
                                              Color="Black"
                                              Opacity="0.25"/>
                        </Border.Effect>

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Background="#181F2C"
                                    CornerRadius="10,10,0,0"
                                    Padding="10,0"
                                    Grid.Row="0">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <Viewbox Grid.Column="0"
                                             HorizontalAlignment="Left"
                                             MaxWidth="400">
                                        <TextBlock Text="Маркировки"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F6F6F6"
                                                   TextWrapping="WrapWithOverflow"
                                                   VerticalAlignment="Center"
                                                   MinWidth="300"
                                                   Margin="0,0,10,0"/>
                                    </Viewbox>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30"
                                            Height="30"
                                            Command="{Binding AddExampleMarkingsCommand}"
                                            Grid.Column="1">
                                        <materialDesign:PackIcon Kind="Plus"
                                                                 Foreground="Green"/>
                                    </Button>
                                </Grid>

                            </Border>

                            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          Grid.Row="1">
                                <Border Background="White"
                                        CornerRadius="8"
                                        Margin="10, 0, 10, 10"
                                        Padding="10"
                                        VerticalAlignment="Stretch">
                                    <ItemsControl ItemsSource="{Binding CurrentTemplate.ExampleMarkings}"
                                                  AlternationCount="100">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F5F5F5"
                                                        CornerRadius="8"
                                                        Margin="10, 0, 10, 10"
                                                        Padding="10"
                                                        VerticalAlignment="Stretch">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="50"/>
                                                            <ColumnDefinition Width="40"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 TextWrapping="Wrap"
                                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                 IsEnabled="{Binding Path=IsChecked, ElementName=EnabledTextBox}"
                                                                 Margin="0,0,10,0"
                                                                 Grid.Column="0"/>

                                                        <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                                                                Command="{Binding DataContext.RemoveExampleMarkingsCommand, ElementName=MainTemplateInfo}"
                                                                CommandParameter="{Binding}"
                                                                Grid.Column="1">
                                                            <materialDesign:PackIcon Kind="TrashCan" 
                                                                                     Width="21" 
                                                                                     Height="21" 
                                                                                     Foreground="Black" />
                                                        </Button>

                                                        <ToggleButton x:Name="EnabledTextBox"
                                                                      Height="30"
                                                                      Width="30"
                                                                      Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                                                      Background="{DynamicResource PrimaryHueMidBrush}"
                                                                      Cursor="Hand"
                                                                      Foreground="White"
                                                                      Grid.Column="2">
                                                            <materialDesign:PackIcon Kind="Edit" 
                                                                                     Width="21" 
                                                                                     Height="21" 
                                                                                     Foreground="Black" />
                                                        </ToggleButton>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</Page>
