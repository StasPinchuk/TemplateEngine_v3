<Page x:Class="TemplateEngine_v3.Views.Pages.EditParametersPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:help="clr-namespace:TemplateEngine_v3.Helpers"
      xmlns:control="clr-namespace:TemplateEngine_v3.UserControls"
      xmlns:converters="clr-namespace:TemplateEngine_v3.Converters"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      Width="850"
      x:Name="editParametersPreviewPage"
      Title="EditParametersPreviewPage">

    <Page.Resources>
        <converters:MaxWidthConverter x:Key="MaxWidthConverter"/>
    </Page.Resources>
    
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"
                                  MinWidth="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=ActualWidth, Converter={StaticResource MaxWidthConverter}, ConverterParameter=20}"
                                  MaxWidth="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=ActualWidth, Converter={StaticResource MaxWidthConverter}, ConverterParameter=80}"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="#D9D9D9"
                    Background="#FFF"
                    BorderThickness="1"
                    CornerRadius="10"
                    ClipToBounds="True"
                    Margin="0,0,10,10"
                    Grid.Column="0">
                <TreeView ItemsSource="{Binding CurrentEvaluatorTree, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                          x:Name="Trees"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding TreeEvaluators}">
                            <StackPanel Orientation="Vertical"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch"
                                        MaxWidth="{Binding ElementName=Trees, Path=ActualWidth}"
                                        Margin="4">

                                <TextBlock Text="{Binding ConditionEvaluator.Name}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap" />

                                <TextBlock Text="{Binding ConditionEvaluator.Value}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Left" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <GridSplitter Grid.Column="1"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"/>

            <Border x:Name="FormulasBorder"
                    Background="#FFF"
                    BorderBrush="#D9D9D9"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="10"
                    Margin="10,0,0,10"
                    Grid.Column="2">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <Grid VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Expander Background="Transparent"
                                  Grid.Row="0">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Системные формулы"
                                       TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding SystemEvaluators}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetSystemFormulaCommand, ElementName=editParametersPreviewPage}"
                                                CommandParameter="{Binding Value}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <Expander Background="Transparent"
                                  Grid.Row="1">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Параметры маркировки"
                                       TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding SystemEvaluators}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetSystemFormulaCommand, ElementName=editParametersPreviewPage}"
                                                CommandParameter="{Binding Value}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <Expander Background="Transparent"
                                  Grid.Row="2">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Формулы и условия текущей детали"
                                               TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding NodeEvaluators}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetCurrentEvaluatorCommand, ElementName=editParametersPreviewPage}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <Expander Background="Transparent"
                                  Grid.Row="3">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Формулы и условия текущего КД"
                                               TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding AllTemplateEvaluator}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetCurrentEvaluatorCommand, ElementName=editParametersPreviewPage}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>
                    </Grid>
                </ScrollViewer>
            </Border>
            
        </Grid>

        <Border BorderBrush="#D9D9D9"
                Background="#FFF"
                BorderThickness="1"
                CornerRadius="10"
                Grid.Row="1"
                x:Name="texBoxField">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="*" 
                                      MinWidth="{Binding ActualWidth, ElementName=texBoxField, Converter={StaticResource MaxWidthConverter}, ConverterParameter=30}"
                                      MaxWidth="{Binding ActualWidth, ElementName=texBoxField, Converter={StaticResource MaxWidthConverter}, ConverterParameter=60}"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="EvalutorName"
                             Text="{Binding SelectedEvaluator.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                             BorderBrush="#D9D9D9"
                             BorderThickness="0,0,0,1"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             TextAlignment="Center"
                             Padding="5"
                             Grid.Row="0"/>

                    <TextBox x:Name="Editor"
                             FontSize="14"
                             Margin="5"
                             Grid.Row="1"
                             HorizontalScrollBarVisibility="Disabled"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             Text="{Binding SelectedEvaluator.Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />


                </Grid>

                <GridSplitter Background="#D9D9D9"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Grid.Column="1"/>

                <TreeView ItemsSource="{Binding Parts.TreeEvaluators, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                          x:Name="Tree"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Grid.Column="2"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding TreeEvaluators}">
                            <StackPanel Orientation="Vertical"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch"
                                        MaxWidth="{Binding ElementName=Tree, Path=ActualWidth}"
                                        Margin="4">

                                <TextBlock Text="{Binding ConditionEvaluator.Name}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap" />

                                <TextBlock Text="{Binding ConditionEvaluator.Value}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Left" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center">
            
            <Button Content="Изменить"
                    IsDefault="True"
                    Margin="0,0,10,0"
                    Command="{Binding ModifyEvalutorCommand}"/>

            <Button Content="Отменить"
                    Command="{Binding CancelModifyEvalutorCommand}"/>
        </StackPanel>
    </Grid>
</Page>
