<Page x:Class="TemplateEngine_v3.Views.Pages.ParametersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:converters="clr-namespace:TemplateEngine_v3.Converters"
      xmlns:control="clr-namespace:TemplateEngine_v3.UserControls" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:help="clr-namespace:TemplateEngine_v3.Helpers"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="parametersPage"
      Title="ParametersPage">

    <Page.Resources>
        <converters:MaxWidthConverter x:Key="MaxWidthConverter"/>
    </Page.Resources>

    <Grid Margin="30,20,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"
                           MinHeight="160"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MinWidth="300"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="300"
                                  MinWidth="300"
                                  MaxWidth="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=ActualWidth, Converter={StaticResource MaxWidthConverter}, ConverterParameter=40}"/>

            </Grid.ColumnDefinitions>

            <Border BorderBrush="#D9D9D9"
                    BorderThickness="1"
                    CornerRadius="10"
                    ClipToBounds="True"
                    Margin="0,0,10,10"
                    Grid.Column="0">
                <ListBox ItemsSource="{Binding Evaluator, UpdateSourceTrigger=LostFocus}"
                         SelectedItem="{Binding SelectedEvaluator, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalContentAlignment="Stretch"
                         Cursor="Hand">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <control:EvalutorBlock Evalutor="{Binding}"
                                                   CopyEvalutorCommand="{Binding DataContext.CopyEvalutorCommand, ElementName=parametersPage}"
                                                   RemoveEvalutorCommand="{Binding DataContext.RemoveEvalutorCommand, ElementName=parametersPage}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <GridSplitter Grid.Column="1"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          Margin="5,0"/>

            <Border x:Name="FormulasBorder"
                    Background="#FFF"
                    BorderBrush="#D9D9D9"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="10"
                    Margin="0,0,10,10"
                    Grid.Column="2">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <Grid VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Expander Background="Transparent"
                                  Grid.Row="0">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Системные формулы"
                                               TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding SystemEvaluators}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetSystemFormulaCommand, ElementName=parametersPage}"
                                                CommandParameter="{Binding Value}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <Expander Background="Transparent"
                                  Grid.Row="1">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Формулы и условия текущей детали"
                                               TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding NodeEvaluators}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetCurrentEvaluatorCommand, ElementName=parametersPage}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <Expander Background="Transparent"
                                  Grid.Row="3">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Формулы и условия текущего КД"
                                               TextWrapping="Wrap"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox ItemsSource="{Binding AllTemplateEvaluator}"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.SetCurrentEvaluatorCommand, ElementName=parametersPage}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                    </Grid>
                </ScrollViewer>
            </Border>

        </Grid>

        <Border BorderBrush="#D9D9D9"
                Background="#FFF"
                BorderThickness="1"
                CornerRadius="10"
                Grid.Row="1"
                x:Name="texBoxField">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="300" 
                                      MinWidth="314"
                                      MaxWidth="{Binding ActualWidth, 
                                                         ElementName=texBoxField, 
                                                         Converter={StaticResource MaxWidthConverter}, 
                                                         ConverterParameter=60}"/>
                    
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Text="{Binding CurrentEvaluator.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                             BorderBrush="#D9D9D9"
                             BorderThickness="0,0,0,1"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             TextAlignment="Center"
                             Padding="5"
                             Grid.Row="0"/>

                    <avalonedit:TextEditor x:Name="Editor"
                                           FontSize="14"
                                           Margin="5"
                                           Grid.Row="1"
                                           HorizontalScrollBarVisibility="Disabled"
                                           VerticalScrollBarVisibility="Auto"
                                           help:AvalonEditHelper.BoundText="{Binding CurrentEvaluator.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <GridSplitter Background="#D9D9D9"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Grid.Column="1"/>

                <TreeView ItemsSource="{Binding Parts.TreeEvaluators, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                          x:Name="Tree"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Grid.Column="2"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding TreeEvaluators}">
                            <StackPanel Orientation="Vertical"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch"
                                        MaxWidth="{Binding ElementName=Tree, Path=ActualWidth}"
                                        Margin="4">

                                <TextBlock Text="{Binding ConditionEvaluator.Name}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap" />

                                <TextBlock Text="{Binding ConditionEvaluator.Value}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Left" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

            </Grid>
        </Border>

        <TextBox materialDesign:HintAssist.Hint="Условие применения"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Text="{Binding Evaluator.UsageCondition, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                 Background="#FFF"
                 Grid.Row="3"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="4"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center">
            <Button Content="{Binding ButtonText, UpdateSourceTrigger=PropertyChanged}"
                    IsDefault="True"
                    Margin="0,0,10,0"
                    Command="{Binding ModifyEvalutorCommand}"/>
            <Button Content="Отменить"
                    Command="{Binding CancelModifyEvalutorCommand}"/>
        </StackPanel>
    </Grid>
</Page>
