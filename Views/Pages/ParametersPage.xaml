<Page x:Class="TemplateEngine_v3.Views.Pages.ParametersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:converters="clr-namespace:TemplateEngine_v3.Converters"
      xmlns:control="clr-namespace:TemplateEngine_v3.UserControls" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
      xmlns:help="clr-namespace:TemplateEngine_v3.Helpers"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="parametersPage"
      Title="ParametersPage">

    <Page.Resources>
        <converters:MaxWidthConverter x:Key="MaxWidthConverter"/>
        <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="30,20,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"
                           MinHeight="160"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MinWidth="300"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="560"
                                  MinWidth="560"
                                  MaxWidth="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=ActualWidth, Converter={StaticResource MaxWidthConverter}, ConverterParameter=40}"/>

            </Grid.ColumnDefinitions>

            <Border BorderBrush="#D9D9D9"
                    BorderThickness="1"
                    CornerRadius="10"
                    ClipToBounds="True"
                    Margin="0,0,10,10"
                    Grid.Column="0">
                <ListBox ItemsSource="{Binding Evaluator, UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding SelectedEvaluator, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalContentAlignment="Stretch"
                         Cursor="Hand">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <control:EvalutorBlock Evalutor="{Binding}"
                                                   CopyEvalutorCommand="{Binding DataContext.CopyEvalutorCommand, ElementName=parametersPage}"
                                                   RemoveEvalutorCommand="{Binding DataContext.RemoveEvalutorCommand, ElementName=parametersPage}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <GridSplitter Grid.Column="1"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          Margin="5,0"/>

            <Border x:Name="FormulasBorder"
                    Background="#FFF"
                    BorderBrush="#D9D9D9"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="10"
                    Margin="0,0,10,10"
                    Grid.Column="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Content="Прочитать с таблицы"
                            MaxWidth="200"
                            Margin="70,0"
                            Grid.Row="0"
                            Command="{Binding DataContext.SetTableCommand, ElementName=formulasAndTermsPage}"
                            CommandParameter="{Binding Value}"/>
                    
                    <TabControl Grid.Row="1">
                        <TabControl.Template>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                                  VerticalScrollBarVisibility="Disabled"
                                                  CanContentScroll="False">
                                        <WrapPanel IsItemsHost="True"
                                                   Orientation="Horizontal"
                                                   Margin="2"/>
                                    </ScrollViewer>

                                    <ContentPresenter Grid.Row="1"
                                                      ContentSource="SelectedContent"
                                                      Margin="4"/>
                                </Grid>
                            </ControlTemplate>
                        </TabControl.Template>

                        <TabItem Header="Системные формулы" 
                                 Height="25"
                                 Padding="10, 0">
                            <ListBox ItemsSource="{Binding SystemEvaluators}"
                                     MinHeight="50"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Cursor="Hand">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"
                                                   ToolTip="{Binding Value}"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MouseLeftButtonUp="SetSystemFormulaCommand"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="Параметры маркировки" 
                                 Height="25"
                                 Padding="10, 0">
                            <ListBox ItemsSource="{Binding TemplateMarkings}"
                                     ScrollViewer.CanContentScroll="True"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Cursor="Hand">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   MouseLeftButtonUp="SetMarkingCommand"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="Формулы и условия текущей детали" 
                                 Height="25"
                                 Padding="10, 0">
                            <ListBox ItemsSource="{Binding NodeEvaluators}"
                                     ScrollViewer.CanContentScroll="True"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     HorizontalContentAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Cursor="Hand">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"
                                                   ToolTip="{Binding Value}"
                                                   MouseLeftButtonUp="SetCurrentEvaluatorCommand"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="Формулы и условия текущего КД" 
                                 Height="25"
                                 Padding="10, 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0"
                                         Text="{Binding FilterAllTemplateEvaluators, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Фильтр"/>

                                <ListBox ItemsSource="{Binding AllTemplateEvaluator, UpdateSourceTrigger=PropertyChanged}"
                                         ScrollViewer.CanContentScroll="True"
                                         VirtualizingStackPanel.IsVirtualizing="True"
                                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                                         HorizontalContentAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                         Cursor="Hand"
                                         Grid.Row="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"
                                                       ToolTip="{Binding Value}"
                                                       MouseLeftButtonUp="SetCurrentEvaluatorCommand"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
                
            </Border>

        </Grid>

        <Border BorderBrush="#D9D9D9"
                Background="#FFF"
                BorderThickness="1"
                CornerRadius="10"
                Grid.Row="1"
                x:Name="texBoxField">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="300" 
                                      MinWidth="314"
                                      MaxWidth="{Binding ActualWidth, 
                                                         ElementName=texBoxField, 
                                                         Converter={StaticResource MaxWidthConverter}, 
                                                         ConverterParameter=60}"/>
                    
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Text="{Binding CurrentEvaluator.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                             BorderBrush="#D9D9D9"
                             BorderThickness="0,0,0,1"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             TextAlignment="Center"
                             Padding="5"
                             Grid.Row="0"/>

                    <avalonedit:TextEditor x:Name="Editor"
                                           FontSize="14"
                                           Margin="5"
                                           Grid.Row="1"
                                           HorizontalScrollBarVisibility="Disabled"
                                           VerticalScrollBarVisibility="Auto"
                                           help:AvalonEditHelper.BoundText="{Binding CurrentEvaluator.Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                </Grid>

                <GridSplitter Background="#D9D9D9"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Grid.Column="1"/>

                <TreeView ItemsSource="{Binding Parts.TreeEvaluators, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                          x:Name="Tree"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Grid.Column="2"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding TreeEvaluators}">
                            <StackPanel Orientation="Vertical"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch"
                                        MaxWidth="{Binding ElementName=Tree, Path=ActualWidth}"
                                        Margin="4">

                                <TextBlock Text="{Binding ConditionEvaluator.Name}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap" />

                                <TextBlock Text="{Binding ConditionEvaluator.Value}"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Left" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

            </Grid>
        </Border>

        <TextBox materialDesign:HintAssist.Hint="Условие применения"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Text="{Binding CurrentEvaluator.UsageCondition, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                 Background="#FFF"
                 Grid.Row="3"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="4"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center">
            <Button Content="{Binding ButtonText, UpdateSourceTrigger=PropertyChanged}"
                    IsDefault="True"
                    Margin="0,0,10,0"
                    Command="{Binding ModifyEvalutorCommand}"/>
            <Button Content="Отменить"
                    Command="{Binding CancelModifyEvalutorCommand}"/>
        </StackPanel>
    </Grid>
</Page>
