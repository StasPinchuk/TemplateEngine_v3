<Page x:Class="TemplateEngine_v3.Views.Pages.TemplateEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      xmlns:controls="clr-namespace:TemplateEngine_v3.UserControls"
      mc:Ignorable="d" 
      Title="TemplateEditPage">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#FFF"
                        BorderBrush="#D5D7DA"
                        BorderThickness="0,0,0,2"
                        Grid.Row="0">
                    <DockPanel LastChildFill="False">
                        <controls:Breadcrumb History="{Binding DataContext.PagesHistory, RelativeSource={RelativeSource AncestorType=Page}}"/>

                        <StackPanel Orientation="Horizontal"
                                    DockPanel.Dock="Right"
                                    Margin="0,0,10,0">

                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    Width="35"
                                    Height="35"
                                    Margin="0,0,10,0"
                                    Command="{Binding PreviewTemplateCommand}">
                                <materialDesign:PackIcon Kind="TestTube"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    Width="35"
                                    Height="35"
                                    Command="{Binding SaveCommand}">
                                <materialDesign:PackIcon Kind="ContentSave"/>
                            </Button>

                        </StackPanel>
                    </DockPanel>
                </Border>

                <Frame x:Name="TemplateFrame"
                       NavigationUIVisibility="Hidden"
                       Grid.Row="1"/>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Page>
