<Page x:Class="TemplateEngine_v3.Views.Pages.PartsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:converters="clr-namespace:TemplateEngine_v3.Converters"
      xmlns:model="clr-namespace:TemplateEngine_v3.Models"
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="partsListPage"
      Title="PartsListPage">

    <Page.Resources>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="InvertedBoolToVis" Inverted="True"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToHiddenVis" UseHidden="True"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ItemsControl ItemsSource="{Binding VisibilitePageCollection, UpdateSourceTrigger=PropertyChanged}"
                          Background="#FFF"
                          Grid.Row="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding VisibilitePageCollection.Count, UpdateSourceTrigger=PropertyChanged}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton HorizontalAlignment="Stretch"
                                     Style="{StaticResource MaterialDesignTabRadioButton}"
                                     IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     GroupName="NodePages"
                                     Cursor="Hand"
                                     Command="{Binding DataContext.NextPageCommand, ElementName=partsListPage}"
                                     CommandParameter="{Binding}">
                            <StackPanel Orientation="Vertical">
                                <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Title}" 
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Frame x:Name="NodePage"
                   JournalOwnership="OwnsJournal"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
       
        <Border Background="#FFF"
                BorderBrush="#D5D7DA"
                BorderThickness="2,0,0,0"
                Padding="0,10"
                Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <TextBox materialDesign:HintAssist.Hint="Фильтр"
                         materialDesign:HintAssist.Background="#FFF"
                         materialDesign:HintAssist.HintPaddingBrush="#FFF"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         DockPanel.Dock="Left"
                         Margin="10"
                         Text="{Binding FilterString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="0"/>
                
                <TreeView ItemsSource="{Binding NodeGroups}"
                          Cursor="Hand"
                          SelectedItemChanged="TreeView_SelectedItemChanged"
                          Grid.Row="1">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type model:NodeGroup}" ItemsSource="{Binding Nodes}">
                            <TextBlock Text="{Binding Key}" />
                        </HierarchicalDataTemplate>
                        <!-- Шаблон для узлов -->
                        <DataTemplate DataType="{x:Type model:Node}">
                            <DockPanel LastChildFill="True" 
                                       MaxWidth="250">
                                <Button DockPanel.Dock="Right"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding DataContext.DeleteNodeCommand, ElementName=partsListPage}"
                                        CommandParameter="{Binding}">
                                    <materialDesign:PackIcon Kind="TrashCan" Width="21" Height="21" Foreground="Black"/>
                                </Button>

                                <Button DockPanel.Dock="Right"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding DataContext.CopyNodeCommand, ElementName=partsListPage}"
                                        CommandParameter="{Binding}">
                                    <materialDesign:PackIcon Kind="ContentCopy" 
                                                             Width="21" 
                                                             Height="21" 
                                                             Foreground="Black"/>
                                </Button>

                                <StackPanel Orientation="Vertical" 
                                            Width="160"
                                            DockPanel.Dock="Left">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="ExtraBlack" 
                                               FontSize="14" 
                                               Padding="4,0" 
                                               TextWrapping="Wrap"/>

                                    <TextBlock Visibility="{Binding Designation, Converter={StaticResource EmptyStringToVisibilityConverter}}" 
                                               Padding="4,0"
                                               TextWrapping="Wrap">
                                        <Run Text="Обозначение: " 
                                             FontWeight="SemiBold"/>
                                        <Run Text="{Binding Designation}"/>
                                    </TextBlock>

                                    <TextBlock Visibility="{Binding NodeComment, Converter={StaticResource EmptyStringToVisibilityConverter}}" 
                                               Padding="4,0"
                                               TextWrapping="Wrap">
                                        <Run Text="Комментарий: " 
                                             FontWeight="SemiBold"/>
                                        <Run Text="{Binding NodeComment}"/>
                                    </TextBlock>

                                    <TextBlock Visibility="{Binding UsageCondition, Converter={StaticResource EmptyStringToVisibilityConverter}}" 
                                               Padding="4,0"
                                               TextWrapping="Wrap">
                                        <Run Text="Условия применения: " 
                                             FontWeight="SemiBold"/>
                                        <Run Text="{Binding UsageCondition}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>

                <materialDesign:PopupBox IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                         PlacementMode="LeftAndAlignMiddles"
                                         Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                                         ToolTipService.Placement="Top"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Bottom"
                                         Width="40"
                                         Height="40"
                                         Margin="0,0,10,0"
                                         Grid.Row="2">
                    <StackPanel Orientation="Horizontal">
                        <Button ToolTip="Добавить новую деталь" 
                                Command="{Binding AddNodeCommand}">
                            <materialDesign:PackIcon Kind="NewBox"
                                                     Foreground="#FFF"/>
                        </Button>
                        <Button ToolTip="Добавить существующую в данном шаблоне" 
                                Command="{Binding CopyNodeCurrentTemplateCommand}">
                            <materialDesign:PackIcon Kind="FolderArrowUp"
                                                     Foreground="#FFF" />
                        </Button>
                        <Button ToolTip="Добавить деталь из другого шаблона"
                                Command="{Binding CopyNodeAllTemplateCommand}">
                            <materialDesign:PackIcon Kind="FolderDownload"
                                                     Foreground="#FFF"/>
                        </Button>
                    </StackPanel>
                </materialDesign:PopupBox>
            </Grid>
        </Border>
    </Grid>
</Page>
