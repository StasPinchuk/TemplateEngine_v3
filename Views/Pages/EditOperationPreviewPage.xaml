<Page x:Class="TemplateEngine_v3.Views.Pages.EditOperationPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:TemplateEngine_v3.Converters" 
      xmlns:local="clr-namespace:TemplateEngine_v3.Views.Pages"
      mc:Ignorable="d" 
      Width="650"
      Title="EditOperationPreviewPage">

    <Page.Resources>
        <converters:MaxWidthConverter x:Key="MaxWidthConverter"/>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"
                              MaxWidth="500"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="10,10,10,0"
              VerticalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ComboBox ItemsSource="{Binding BranchDivision}"
                      SelectedItem="{Binding CurrentBranchDivision, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Grid.Row="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Branch.Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <TextBox Text="{Binding CurrentBranchDivision.UnitEquipment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Оборудование"
                     Grid.Row="1"
                     GotFocus="TextBox_GotFocus"
                     Margin="0,10"/>

            <TextBox Text="{Binding CurrentBranchDivision.DivisionCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Номер подразделения"
                     GotFocus="TextBox_GotFocus"
                     Grid.Row="2"/>

            <TextBox Text="{Binding CurrentBranchDivision.UsageCondition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Условие для операции"
                     GotFocus="TextBox_GotFocus"
                     ContextMenu="{Binding TextBoxContextMenu}"
                     Grid.Row="3"
                     Margin="0,10"/>

            <TextBox Text="{Binding CurrentBranchDivision.Materials.Name.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     GotFocus="TextBox_GotFocus"
                     materialDesign:HintAssist.Hint="Название материала"
                     ContextMenu="{Binding TextBoxContextMenu}"
                     Grid.Row="4"/>

            <TextBox Text="{Binding CurrentBranchDivision.Materials.Consumption.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Расход материала"
                     GotFocus="TextBox_GotFocus"
                     ContextMenu="{Binding TextBoxContextMenu}"
                     Grid.Row="5"
                     Margin="0,10"/>

            <TextBox Text="{Binding CurrentBranchDivision.Materials.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     GotFocus="TextBox_GotFocus"
                     materialDesign:HintAssist.Hint="Единицы измерения"
                     Grid.Row="6"/>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="7"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">

                <Button VerticalAlignment="Center"
                        Background="Green"
                        BorderBrush="Green"
                        Margin="0,0,10,0"
                        Command="{Binding EditOperationCommand}"
                        Content="Изменить" />

                <Button VerticalAlignment="Center"
                        Background="Red"
                        BorderBrush="Red"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        Content="Отмена" />
            </StackPanel>
        </Grid>
        <TreeView ItemsSource="{Binding Parts}"
                  Width="0"
                  x:Name="Tree"
                  Grid.Column="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  BorderBrush="Transparent"
                  Background="#FFF"
                  SelectedItemChanged="Tree_SelectedItemChanged"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  BorderThickness="0">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding TreeEvaluators}">
                    <Grid Cursor="Hand" 
                            Margin="4" 
                            MaxWidth="{Binding ElementName=Tree, Path=ActualWidth}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding ConditionEvaluator.Name}"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    TextWrapping="Wrap"
                                    Grid.Row="0" />

                        <TextBlock Text="{Binding ConditionEvaluator.Value}"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    TextWrapping="Wrap"
                                    Grid.Row="1"
                                    HorizontalAlignment="Left" />
                    </Grid>
                </HierarchicalDataTemplate>

            </TreeView.ItemTemplate>
        </TreeView>
        
    </Grid>
</Page>
