<UserControl x:Class="TemplateEngine_v3.UserControls.TemplateStageChoiceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="templateStageChoiceDialog"
             Width="500"
             MinHeight="450">

    <Grid Margin="16">

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0"
                   LastChildFill="True">

            <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="cancel"
                    HorizontalAlignment="Right"
                    Width="30"
                    Height="30"
                    DockPanel.Dock="Right">
                <materialDesign:PackIcon Kind="Close"
                     Foreground="Red"/>
            </Button>
            
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left">
                <materialDesign:PackIcon Kind="Settings"
                                         Width="24"
                                         Height="24"
                                         Margin="0,0,10,0"/>

                <TextBlock Text="Статусы шаблона"
                           FontWeight="SemiBold"
                           FontSize="20"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <Grid Margin="0,10"
              Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="LightGray"
                    x:Name="ListBoxBorder"
                    BorderThickness="2"
                    Grid.Column="0">
                <ListBox x:Name="StageListBox"
                         ItemsSource="{Binding StageList, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                         SelectedItem="{Binding CurrentStage, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Padding" Value="4"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>

                            <!-- Убираем визуальные эффекты от темы -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="4,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#007AFF"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="170"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding StageName, UpdateSourceTrigger=PropertyChanged}"
                                           VerticalAlignment="Center"
                                           Grid.Column="0"/>
                                
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Height="30"
                                        Width="30"
                                        Command="{Binding RemoveStageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Grid.Column="2">
                                    <materialDesign:PackIcon Kind="Trash"
                                                             Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                             Width="25"
                                                             Height="25"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <StackPanel Orientation="Vertical"
                        Grid.Column="2">

                <Border Background="{Binding CurrentStage.BackgroundStageColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                        CornerRadius="15"
                        Padding="10,5">

                    <StackPanel Orientation="Horizontal">

                        <materialDesign:PackIcon Kind="{Binding CurrentStage.StageIcon, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                                                 VerticalAlignment="Center"
                                                 Foreground="{Binding CurrentStage.IconStageColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                 Margin="0,0,10,0"/>


                        <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   materialDesign:HintAssist.Hint="Название статуса"
                                   Text="{Binding CurrentStage.StageName, FallbackValue='Название статуса', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                                   Foreground="{Binding CurrentStage.TextStageColor, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"/>
                        

                    </StackPanel>
                </Border>
                
                <TextBox materialDesign:HintAssist.Hint="Название статуса"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding CurrentStage.StageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                         MaxLength="16"
                         Margin="0,10"/>
                
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Цвет текста"
                               FontWeight="SemiBold"
                               FontSize="18"
                               VerticalAlignment="Center"/>

                    <xctk:ColorPicker SelectedColorChanged="SelectedTextColor_SelectedColorChanged"
                                      UsingAlphaChannel="False"
                                      DisplayColorAndName="False"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Цвет статуса"
                               FontWeight="SemiBold"
                               FontSize="18"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical">
                        <ItemsControl ItemsSource="{Binding Items, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                                      MaxHeight="350">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="45"
                                               ItemHeight="45"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" Margin="4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel x:Name="ColorPickerPanel"
                                    Orientation="Vertical">
                            <xctk:ColorPicker x:Name="MyColorPicker"
                                              SelectedColor="{Binding SelectedColor, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              UsingAlphaChannel="False"
                                              DisplayColorAndName="False"
                                              Margin="16"/>

                            <Button Content="Добавить"
                                    Click="AddButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Иконка"
                               FontWeight="SemiBold"
                               FontSize="18"
                               VerticalAlignment="Center"/>

                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              ItemsSource="{Binding StageIconsList, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding CurrentStage.StageIcon, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"    
                              Height="30"
                              Padding="10, 0"
                              Margin="0,10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <materialDesign:PackIcon Kind="{Binding}" Width="20" Height="20" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                    <TextBlock Text="Цвет иконки"
                               FontWeight="SemiBold"
                               FontSize="18"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical">
                        <ItemsControl ItemsSource="{Binding IconColors, UpdateSourceTrigger=PropertyChanged, ElementName=templateStageChoiceDialog}"
                                      MaxHeight="350">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel ItemWidth="45"
                                               ItemHeight="45"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" Margin="4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel x:Name="IconColorPickerPanel"
                                    Orientation="Vertical">
                            <xctk:ColorPicker SelectedColor="{Binding SelectedIconColor, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              UsingAlphaChannel="False"
                                              DisplayColorAndName="False"
                                              Margin="16"/>

                            <Button Content="Добавить"
                                    Click="AddIconColorButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Button Content="Добавить статус"
                        Command="{Binding AddStageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Margin="0,10,0,0"/>

            </StackPanel>
            
        </Grid>

    </Grid>

</UserControl>
