<UserControl x:Class="TemplateEngine_v3.UserControls.Breadcrumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d" 
             x:Name="BreadcrumbControl"
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Border Padding="10, 5">
        <StackPanel Orientation="Horizontal">

            <Button Visibility="{Binding ButtonVisibility, ElementName=BreadcrumbControl, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    Height="25"
                    Width="25"
                    Command="{Binding PrevPageCommand, ElementName=BreadcrumbControl}">
                        <materialDesign:PackIcon Kind="ArrowLeft" Foreground="Black"/>
            </Button>

            <ItemsControl ItemsSource="{Binding History, ElementName=BreadcrumbControl}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Button Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="Black"
                                    Cursor="Hand"
                                    Padding="4,2"
                                    Content="{Binding Title}"
                                    Command="{Binding PrevSelectedPageCommand, ElementName=BreadcrumbControl}"
                                    CommandParameter="{Binding}"/>
                            <TextBlock Text="/"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Border>
</UserControl>
