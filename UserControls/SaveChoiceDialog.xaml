<UserControl x:Class="TemplateEngine_v3.UserControls.SaveChoiceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinWidth="300"
             MinHeight="100">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите статус шаблона:"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0 0 0 10" />

        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  materialDesign:HintAssist.Hint="Тип статуса"
                  ItemsSource="{Binding StageList, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  SelectedItem="{Binding CurrentStage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  DisplayMemberPath="StageName"
                  SelectionChanged="ComboBox_SelectionChanged"
                  Margin="0 0 0 10"/>


        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="Green"
                    BorderBrush="Green"
                    Margin="10,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="{Binding TypeString, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <Button Content="Отмена"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="Red"
                    BorderBrush="Red"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="cancel"/>
        </StackPanel>
    </StackPanel>
</UserControl>
