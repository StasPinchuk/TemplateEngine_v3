<UserControl x:Class="TemplateEngine_v3.UserControls.SaveChoiceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinWidth="300"
             MinHeight="100">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите способ сохранения:"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0 0 0 20" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Готовое изделие"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="Green"
                    BorderBrush="Green"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="finished"/>

            <Button Content="Черновик"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="10, 0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="draft"/>

            <Button Content="Отмена"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="Red"
                    BorderBrush="Red"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="cancel"/>
        </StackPanel>
    </StackPanel>
</UserControl>
