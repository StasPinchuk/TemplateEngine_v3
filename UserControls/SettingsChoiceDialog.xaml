<UserControl x:Class="TemplateEngine_v3.UserControls.SettingsChoiceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d"
             MinWidth="520">
    <Grid Margin="20">

        <Grid.RowDefinitions>

            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>

        </Grid.RowDefinitions>
        
        <Button Style="{StaticResource MaterialDesignIconButton}"
                Width="30"
                Height="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Right"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                CommandParameter="closed"
                Grid.Row="0">
            <materialDesign:PackIcon Kind="Close"
                             Foreground="Red"/>
        </Button>

        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                  Grid.Row="1"/>

        <DockPanel LastChildFill="True"
                   Grid.Row="2">
            
            <Button Content="Выбрать папку"
                    Margin="10,0,0,0"
                    Command="{Binding ChooseFolderCommand}" 
                    DockPanel.Dock="Right"/>
            
            <TextBox Text="{Binding SelectedFolder, Mode=TwoWay}"
                     IsReadOnly="True"
                     materialDesign:HintAssist.Hint="Папка"
                     Height="50"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     DockPanel.Dock="Left"/>

        </DockPanel>

    </Grid>
</UserControl>
