<UserControl x:Class="TemplateEngine_v3.UserControls.EvalutorBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#FFF"
            BorderBrush="#D9D9D9"
            BorderThickness="1"
            CornerRadius="8"
            Padding="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical"
                    Grid.Row="0">
                <TextBlock Text="{Binding Evalutor.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="16"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Evalutor.Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
            </StackPanel>
            <UniformGrid Columns="2"
                     Grid.Column="1">
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Width="30"
                        Height="30"
                        Command="{Binding CopyEvalutorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}">
                    <materialDesign:PackIcon Kind="ContentCopy" 
                                         Width="20" 
                                         Height="20" 
                                         Foreground="Black"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Width="30"
                        Height="30"
                        Command="{Binding RemoveEvalutorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}">
                    <materialDesign:PackIcon Kind="TrashCan" 
                                             Width="20" 
                                             Height="20" 
                                             Foreground="Black"/>
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
