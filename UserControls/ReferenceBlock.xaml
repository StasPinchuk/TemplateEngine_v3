<UserControl x:Class="TemplateEngine_v3.UserControls.ReferenceBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d"
             Width="250">
    
    <Border Background="#FFF"
            BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
            BorderThickness="1"
            Padding="20, 24"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="3" 
                              ShadowDepth="3" 
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0">
                <TextBlock Text="{Binding CurrentReferenceModel.Name, FallbackValue='Нет данных', RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="24"
                           TextWrapping="Wrap"
                           MaxWidth="1000"
                           FontWeight="SemiBold"
                           TextAlignment="Center"/>
            </Viewbox>

            <Border CornerRadius="15"
                    Background="LightGray"
                    HorizontalAlignment="Center"
                    Padding="10,5"
                    Grid.Row="2">

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    
                    <materialDesign:PackIcon Kind="Edit"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>

                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" 
                               Text="Черновик"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>

                </StackPanel>
                
            </Border>

            <DockPanel Grid.Row="4"
                       LastChildFill="False">

                <TextBlock FontSize="16"
                           FontWeight="Regular"
                           TextAlignment="Center"
                           DockPanel.Dock="Top">
                    <Run Text="Создан: "
                         FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentReferenceModel.CreateDate, StringFormat={}{0:dd.MM.yyyy}, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBlock>

                <TextBlock FontSize="16"
                           FontWeight="Regular"
                           TextAlignment="Center"
                           DockPanel.Dock="Bottom">
                    <Run Text="Изменен: "
                         FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentReferenceModel.LastEditDate, StringFormat={}{0:dd.MM.yyyy}, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBlock>

            </DockPanel>

            <UniformGrid Grid.Row="6"
                         Columns="3">

                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Background="Red"
                        ToolTip="Удалить"
                        Width="45"
                        Height="40"
                        Padding="0"
                        IsEnabled="{Binding CanRemove, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                        Command="{Binding RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <materialDesign:PackIcon Kind="TrashCan"
                                             Width="25"
                                             Height="25"/>

                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        ToolTip="Копировать"
                        Width="45"
                        Height="40"
                        Padding="0"
                        Background="LightGray"
                        BorderBrush="LightGray"
                        IsEnabled="{Binding CanCopy, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding CloneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <materialDesign:PackIcon Kind="ContentCopy"
                                             Width="25"
                                             Height="25"
                                             Foreground="Black"/>

                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Background="Green"
                        BorderBrush="Green"
                        Width="45"
                        Height="40"
                        Padding="0"
                        ToolTip="{Binding ButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        IsEnabled="{Binding CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <materialDesign:PackIcon Kind="{Binding ButtonIcon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Width="25"
                                             Height="25"/>

                </Button>

            </UniformGrid>
        </Grid>
        
    </Border>
</UserControl>
