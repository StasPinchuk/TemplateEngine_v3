<UserControl x:Class="TemplateEngine_v3.UserControls.ReferenceBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d"
             Width="250">
    
    <Border Background="#FFF"
            BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
            BorderThickness="1"
            Padding="20, 24"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="3" 
                              ShadowDepth="3" 
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0">
                <TextBlock Text="{Binding CurrentReferenceModel.Name, FallbackValue='Нет данных', RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="24"
                           TextWrapping="Wrap"
                           MaxWidth="650"
                           FontWeight="SemiBold"
                           TextAlignment="Center"/>
            </Viewbox>

            <Border CornerRadius="15"
                    Background="{Binding Stage.BackgroundStageColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    HorizontalAlignment="Center"
                    Padding="10,5"
                    Grid.Row="2">

                <Border.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="320"
                          ShadowDepth="2"
                          Opacity="0.5"
                          BlurRadius="5" />
                </Border.Effect>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <materialDesign:PackIcon Kind="{Binding Stage.StageIcon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             VerticalAlignment="Center"
                                             Foreground="{Binding Stage.IconStageColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Margin="0,0,10,0"/>

                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" 
                               Text="{Binding Stage.StageName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               VerticalAlignment="Center"
                               Foreground="{Binding Stage.TextStageColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontWeight="SemiBold"/>

                </StackPanel>

            </Border>

            <Grid Grid.Row="4"
                  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Создан: "
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBlock Text="{Binding CurrentReferenceModel.CreateDate, StringFormat={}{0:dd.MM.yyyy}, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Column="1"
                           Grid.Row="0"/>

                <TextBlock Text="Изменен: "
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Column="0"
                           Grid.Row="1"/>
                <TextBlock Text="{Binding CurrentReferenceModel.LastEditDate, StringFormat={}{0:dd.MM.yyyy}, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Column="1"
                           Grid.Row="1"/>

            </Grid>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Grid.Row="6">

                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        AutomationProperties.Name="Удалить элемент"
                        Background="Red"
                        ToolTip="{Binding ButtonRemoveToolTip, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        Width="45"
                        Height="40"
                        Padding="0"
                        Margin="0 0 20 0"
                        IsEnabled="{Binding CanRemove, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                        Command="{Binding RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <materialDesign:PackIcon Kind="{Binding ButtonRemoveIcon, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                                             Width="25"
                                             Height="25"/>

                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        AutomationProperties.Name="Копировать элемент"
                        ToolTip="Копировать"
                        Width="45"
                        Height="40"
                        Padding="0"
                        Margin="0 0 20 0"
                        Background="LightGray"
                        BorderBrush="LightGray"
                        Visibility="{Binding CopyButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding CanCopy, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding CloneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <materialDesign:PackIcon Kind="ContentCopy"
                                             Width="25"
                                             Height="25"
                                             Foreground="Black"/>

                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        AutomationProperties.Name="Изменить/восстановить"
                        Background="Green"
                        BorderBrush="Green"
                        Width="45"
                        Height="40"
                        Padding="0"
                        ToolTip="{Binding ButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        IsEnabled="{Binding CanEdit, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}">

                    <materialDesign:PackIcon Kind="{Binding ButtonIcon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Width="25"
                                             Height="25"/>

                </Button>

            </StackPanel>
        </Grid>
        
    </Border>
</UserControl>
