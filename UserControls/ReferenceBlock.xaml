<UserControl x:Class="TemplateEngine_v3.UserControls.ReferenceBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d" 
             Width="500"
             Height="155"
             MaxHeight="250">
    <Border Background="#FFF"
            BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
            BorderThickness="1"
            Padding="12"
            CornerRadius="8"
            MinWidth="500"
            MaxHeight="250">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="3" 
                              ShadowDepth="3" 
                              Opacity="0.25" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Новый"
                       Foreground="Green"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Visibility="{Binding NewIndicate, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <TextBlock Text="Изменен"
                       Foreground="Red"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,10,0,0"
                       Visibility="{Binding EditIndicate, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <Viewbox Grid.Row="0"
                     Margin="0,0,60,0">
                <TextBlock Text="{Binding CurrentReferenceModel.Name, FallbackValue='Нет данных', RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="24"
                           TextWrapping="Wrap"
                           MaxWidth="800"
                           FontWeight="SemiBold"
                           TextAlignment="Center"/>
            </Viewbox>

            <DockPanel Grid.Row="2"
                       LastChildFill="False">

                
                <TextBlock FontSize="16"
                           FontWeight="Regular"
                           TextAlignment="Center"
                           DockPanel.Dock="Left">
                    <Run Text="Создан: "
                         FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentReferenceModel.CreateDate, StringFormat={}{0:dd.MM.yyyy}, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBlock>

                <TextBlock FontSize="16"
                           FontWeight="Regular"
                           TextAlignment="Center"
                           DockPanel.Dock="Right">
                    <Run Text="Изменен: "
                         FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentReferenceModel.LastEditDate, StringFormat={}{0:dd.MM.yyyy}, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBlock>

            </DockPanel>

            <UniformGrid Grid.Row="5"
                         Rows="1">
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Background="Red"
                        IsEnabled="{Binding IsLocked, UpdateSourceTrigger=PropertyChanged}"
                        BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                        Command="{Binding RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="Удалить"/>
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        BorderBrush="{StaticResource MaterialDesignDarkSeparatorBackground}"
                        Background="#1C212E"
                        Command="{Binding CloneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="Копировать"
                        Margin="10,0"/>
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Background="Green"
                        BorderBrush="Green"
                        IsEnabled="{Binding IsLocked, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CurrentReferenceModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="Изменить"/>
            </UniformGrid>
        </Grid>
        
    </Border>
</UserControl>
