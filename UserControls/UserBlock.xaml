<UserControl x:Class="TemplateEngine_v3.UserControls.UserBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:TemplateEngine_v3.UserControls"
             mc:Ignorable="d" 
             x:Name="userBlock">
    
    <Border Background="#FFF"
            BorderThickness="1"
            CornerRadius="5"
            Padding="12"
            Width="310"
            MinHeight="100"
            MaxHeight="390"
            Margin="0,0,0,10"
            HorizontalAlignment="Center">

        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              BlurRadius="3" 
                              ShadowDepth="3" 
                              Opacity="0.25"/>
        </Border.Effect>

        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="30"
                               Height="Auto"
                               MaxHeight="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="{Binding User.FullName, ElementName=userBlock}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="18"
                       FontWeight="Bold"
                       Grid.Row="0"/>
            
            <TextBlock Text="Список прав пользователя:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Grid.Row="1"/>
            
            <TextBlock Text="{Binding PermissionsText, FallbackValue='Нет прав', ElementName=userBlock}"
                       Grid.Row="2"/>
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Grid.Row="3">
                
                <Button Padding="6,0"
                        Margin="0,0,10,0"
                        Background="Red"
                        BorderBrush="Red"
                        Command="{Binding DeletePermissionCommand, ElementName=userBlock}"
                        CommandParameter="{Binding User, ElementName=userBlock}"
                        Content="Удалить все права"/>
                
                <Button Padding="6,0"
                        Background="Green"
                        BorderBrush="Green"
                        Content="Выдать права"
                        Command="{Binding SelectUserCommand, ElementName=userBlock}"
                        CommandParameter="{Binding User, ElementName=userBlock}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
